<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".VehicleDetailActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarVehicleDetail"
            android:layout_width="420dp"
            android:layout_height="70dp"
            android:background="?attr/colorPrimary"
            android:minHeight="?attr/actionBarSize"
            android:theme="?attr/actionBarTheme"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.555"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/saveButtonVehicleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintBottom_toTopOf="@+id/mainTitleVehicleDetail"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.815"
            app:layout_constraintStart_toEndOf="@+id/mainTitleVehicleDetail"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/baseline_check_24" />

        <ImageButton
            android:id="@+id/backButtonVehicleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="33dp"
            app:layout_constraintEnd_toStartOf="@+id/mainTitleVehicleDetail"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/baseline_arrow_back_24" />

        <TextView
            android:id="@+id/mainTitleVehicleDetail"
            android:layout_width="217dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/toolbarVehicleDetail"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="660dp"
            android:layout_marginTop="68dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbarVehicleDetail"
            tools:context=".VehicleDetailActivity"
            tools:showIn="@layout/activity_vehicle_detail">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/vehicleDetailMakeInput"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.923"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailMake"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/vehicleDetailYear"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:text="@string/vehicleDetailYear"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.923"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailModelInput"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/vehicleDetailModel"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:text="@string/vehicleDetailModel"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.923"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailMakeInput"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageView
                    android:id="@+id/vehicleDetailCarPic"
                    android:layout_width="160dp"
                    android:layout_height="160dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/vehicleDetailModel"
                    app:layout_constraintHorizontal_bias="0.47"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.073"
                    tools:srcCompat="@drawable/ic_launcher_foreground" />

                <TextView
                    android:id="@+id/vehicleDetailMake"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:text="@string/vehicleDetailMake"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.923"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.049" />

                <TextView
                    android:id="@+id/vehicleDetailVin"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_marginTop="40dp"
                    android:text="@string/vehicleDetailVin"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailCarPic"
                    app:layout_constraintVertical_bias="0.0" />

                <ImageButton
                    android:id="@+id/vehicleDetailPicCamera"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toTopOf="@+id/vehicleDetailVin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.025"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailCarPic"
                    app:layout_constraintVertical_bias="0.0"
                    app:srcCompat="@drawable/baseline_photo_camera_24" />

                <ImageButton
                    android:id="@+id/vehicleDetailPicGallery"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    app:layout_constraintBottom_toBottomOf="@+id/vehicleDetailPicCamera"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toEndOf="@+id/vehicleDetailPicCamera"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailCarPic"
                    app:srcCompat="@drawable/baseline_image_24" />

                <EditText
                    android:id="@+id/vehicleDetailModelInput"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.923"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailModel"
                    app:layout_constraintVertical_bias="0.01" />

                <EditText
                    android:id="@+id/vehicleDetailYearInput"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="number"
                    app:layout_constraintBottom_toTopOf="@+id/vehicleDetailVin"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.923"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailYear"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/vehicleDetailVinInput"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailVin"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/vehicleDetailPlate"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/vehicleDetailPlate"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.58"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailVinInput"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/vehicleDetailPlateInput"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="text"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailPlate"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/vehicleDetailMileage"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:text="@string/vehicleDetailMileage"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/vehicleDetailPlate"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailVinInput"
                    app:layout_constraintVertical_bias="0.0" />

                <EditText
                    android:id="@+id/vehicleDetailMileageInput"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:ems="10"
                    android:inputType="number"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/vehicleDetailPlateInput"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailMileage"
                    app:layout_constraintVertical_bias="0.0" />

                <TextView
                    android:id="@+id/vehicleDetailCustomNote"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:text="@string/vehicleDetailCustomNote"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailMileageInput"
                    app:layout_constraintVertical_bias="0.0" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/vehicleDetailCustomNote">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/vehicleDetailCustomNoteInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>